<!doctype html>
<html lang="en-US">
  <head>
    <title>Gardener's Journal</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>
  <body>
    <header>
      <a href="/plants"><h1>Gardener's Journal</h1></a>
      <%= yield_content :header_links %>
    </header>

    <% if session[:error] %>
      <div class="flash error">
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <% if session[:success] %>
      <div class="flash success">
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
